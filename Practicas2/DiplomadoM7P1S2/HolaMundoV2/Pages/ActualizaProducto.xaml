<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundo.Pages.ActualizaProducto"
             Title="ActualizaProducto">
    <VerticalStackLayout Margin="20">
        <Label Margin="50 20"
               Style="{StaticResource Headline}"
            Text="Actualizar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label Text="Nombre:"/>
        <Entry x:Name="entryNombre" Margin="0 0 20 0" 
               Placeholder="Ingrese el nombre del producto"/>

        <Label Text="Descripcion:"/>
        <Entry x:Name="entryDescripcion" Margin="0 0 20 0" 
               Placeholder="Ingrese la descripcion del producto"/>

        <Label Text="Precio:"/>
        <Entry x:Name="entryPrecio" Margin="0 0 20 0"  
               Placeholder="Ingrese el precio del producto" Keyboard="Numeric"/>

        <Button x:Name="btnGuardar" Margin="0 0 20 0" 
                Text="Guardar" Clicked="btnGuardar_Clicked"/>
        
        <Button x:Name="btnCancelar" 
                Text="Cancelar" Clicked="btnCancelar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>