<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundo.Pages.DetallesProducto"
             Title="DetallesProducto">
    <VerticalStackLayout>
        <Label 
            Text="Detalles del producto"
            Style="{StaticResource Headline}"
            Margin="20 20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label Text="Nombre:"/>
        <Label x:Name="lblNombre" 
               Margin="0 0 20 0"
               Text="{Binding Nombre}"/>

        <Label Text="Descripcion:"/>
        <Label x:Name="lblDescripcion" 
               Margin="0 0 20 0"
               Text="{Binding Descripcion}"/>

        <Label Text="Precio:"/>
        <Label x:Name="lblPrecio" 
               Margin="0 0 20 0"
               Text="{Binding Precio}"/>
        
        <Button x:Name="btnEditar" 
                Text="Editar" 
                Margin="0 0 20 0"
                Clicked="btnEditar_Clicked"/>
        
        <Button x:Name="btnBorrar" 
                Text="Borrar" 
                Clicked="btnBorrar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>