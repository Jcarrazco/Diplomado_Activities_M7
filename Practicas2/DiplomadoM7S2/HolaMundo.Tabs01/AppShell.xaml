<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HolaMundo.Tabs01.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HolaMundo.Tabs01"
    xmlns:pages="clr-namespace:HolaMundo.Tabs01.Pages"
    Title="HolaMundo.Tabs01">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Page 1">
            <ShellContent ContentTemplate="{DataTemplate pages:NewPage1}"/>
        </Tab>
        <Tab Title="Page 2">
            <ShellContent ContentTemplate="{DataTemplate pages:NewPage2}"/>
        </Tab>
        <Tab Title="Page 3">
            <ShellContent ContentTemplate="{DataTemplate pages:NewPage3}"/>
        </Tab>
        <Tab Title="Page 4">
            <ShellContent ContentTemplate="{DataTemplate pages:NewPage4}"/>
        </Tab>
    </TabBar>

</Shell>
