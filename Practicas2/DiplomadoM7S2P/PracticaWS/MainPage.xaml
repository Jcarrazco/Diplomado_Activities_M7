<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaWS.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a submarine number ten" />

            <Label
                Text="Consulta datos por Codigo Postal"
                Margin="0,0,20,0"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry x:Name="cpEntry"
                   Margin="0,0,20,0"
                   Placeholder="Escribe el Codigo Postal"
                   Keyboard="Numeric"/>
            
            <Label
                x:Name="resultLabel"
                Text="Resultado: "
                Style="{StaticResource SubHeadline}"/>

            <Button
                x:Name="btnConsultar"
                Text="Consultar Datos" 
                Clicked="btnConsultar_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
